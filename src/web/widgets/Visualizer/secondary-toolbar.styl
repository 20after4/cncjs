$padding-top = 8px;
$padding-bottom = 8px;
$padding-left = 8px;
$padding-right = 8px;
$icon-width = 20px;
$icon-height = 20px;

.secondary-toolbar {
    .btn-icon {
        display: inline-block;
        padding: $padding-top $padding-right $padding-bottom $padding-left;
        margin-bottom: 0;
        font-weight: normal;
        text-align: center;
        white-space: nowrap;
        touch-action: manipulation;
        cursor: pointer;
        user-select: none;
        background-image: none;
        background-color: inherit;
        border: 0;
        color: inherit;

        &.highlight,
        &:hover {
            background-image: none;
            background-color: #e6e6e6;
        }

        &.highlight,
        &:hover,
        &:focus,
        &:active {
            outline: 0;
            color: #333;
            text-decoration: none;
        }

        filter: invert(40%);

        &.highlight,
        &:hover {
            filter: invert(0%);
        }

        min-width: $padding-left + $icon-width + $padding-right;
        height: $padding-top + $icon-height + $padding-bottom;
    }

    .btn-icon + .btn-icon {
        margin-left: 0;
    }
}
