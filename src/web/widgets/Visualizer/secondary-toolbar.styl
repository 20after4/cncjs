$padding-top = 8px;
$padding-bottom = 8px;
$padding-left = 8px;
$padding-right = 8px;
$icon-width = 20px;
$icon-height = 20px;

.secondary-toolbar {
    .btn-icon {
        display: inline-block;
        padding: $padding-top $padding-right $padding-bottom $padding-left;
        margin-bottom: 0;
        font-weight: normal;
        text-align: center;
        white-space: nowrap;
        touch-action: manipulation;
        cursor: pointer;
        user-select: none;
        background-image: none;
        background-color: inherit;
        border: 0;
        color: inherit;

        &:hover {
            background-color: #e6e6e6;
        }

        &:hover,
        &:focus,
        &:active {
            outline: 0;
            color: #333;
            text-decoration: none;
        }

        filter: invert(40%);

        &:hover {
            filter: invert(0%);
        }

        min-width: $padding-left + $icon-width + $padding-right;
        height: $padding-top + $icon-height + $padding-bottom;
    }

    .btn-icon + .btn-icon {
        margin-left: 0;
    }

    .icon {
        display: inline-block;
        width: $icon-width;
        height: $icon-height;

        &.icon-zoom-in {
            background: url("./images/zoom-in.svg") no-repeat 0 0;
        }
        &.icon-zoom-out {
            background: url("./images/zoom-out.svg") no-repeat 0 0;
        }
        &.icon-move {
            background: url("./images/move.svg") no-repeat 0 0;
        }
        &.icon-rotate {
            background: url("./images/rotate-object.svg") no-repeat 0 0;
        }
        &.icon-focus-center {
            background: url("./images/focus.svg") no-repeat 0 0;
        }
    }
}
